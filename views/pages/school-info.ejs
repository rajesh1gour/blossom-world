<% layout("layouts/boilerplate") %>
<section class="school-info-section py-5">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <h4 class="cursive-sub text-orange">Everything you need to know</h4>
            <h2 class="section-main-title">School Essentials</h2>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <ul class="nav nav-pills mb-4 justify-content-center custom-info-tabs" id="infoTab" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#timings">School Timings</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="pill" data-bs-target="#uniform">Uniform Code</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="pill" data-bs-target="#curriculum">Curriculum</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="pill" data-bs-target="#houses">House System</button>
                    </li>
                </ul>

                <div class="tab-content info-content-box shadow-lg" id="infoTabContent">
                    
                    <div class="tab-pane fade show active" id="timings">
                        <div class="row align-items-center p-4">
                            <div class="col-md-6">
                                <h3 class="text-navy mb-4"><i class="bi bi-clock-history me-2"></i> SCHOOL HOURS</h3>
                                <table class="table table-borderless">
                                    <tr><td><strong>Nursery:</strong></td><td>09:30 AM — 12:10 PM</td></tr>
                                    <tr><td><strong>KG-I:</strong></td><td>09:30 AM — 01:00 PM (Monday to Friday)</td></tr>
                                    <tr><td><strong>KG-II:</strong></td><td>09:30 AM — 02:10 PM (Monday to Friday)</td></tr>
                                    <tr><td><strong>Class-I to XII:</strong></td><td>09:30 AM — 02:30 PM (Monday to Friday)</td></tr>
                                </table>

                            <br>
                            <h3 class="text-navy mb-4"><i class="bi bi-clock-history me-2"></i> Meeting with Principal</h3>
                                <table class="table table-borderless">
                                    <tr><td>Monday to Friday by appointment</td></tr>
                                    <tr><td>between 10:30 AM and 11:30 AM</td></tr>
                                </table>
                            </div>
                            <div class="col-md-6 bg-light-orange p-4 rounded">
                                 <h3 class="text-navy mb-4"><i class="bi bi-clock-history me-2"></i> OFFICE HOURS</h3>
                                <table class="table table-borderless">
                                    <tr><td><strong>Monday to Friday:</strong></td><td>10:00 AM — 2:30 PM</td></tr>
                                </table>
                                <p class="mb-0 small text-muted"><strong>Note:</strong> Saturday is a half-day for all classes. Office hours are 9:30 AM to 12:00 PM. and Time of Closing the school gate is 9.15 A.M.</p>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="uniform">
                        <div class="p-4">
                            <h3 class="text-navy mb-3">Uniform Standards</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="text-orange">Summer Uniform</h5>
                                    <ul>
                                        <li>shirt/Salwar with school monogram</li>
                                        <li>Grey trousers/skirts/Churidar/Pyjamas</li>
                                        <li>School tie and belt</li>
                                    </ul>
                                </div>
                                <div class="col-md-6 border-start">
                                    <h5 class="text-orange">Winter Uniform</h5>
                                    <ul>
                                        <li>Navy blue blazer with crest</li>
                                        <li>Grey woollen trousers</li>
                                        <li>Navy Blue V-neck sweater</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="curriculum">
                        <div class="p-4 text-center">
                            <img src="/img/cbse-logo.png" style="width: 80px;" class="mb-3">
                            <h3 class="text-navy">SEBA & AHSEC Affiliated</h3>
                            <p class="max-width-700 mx-auto">BWSSS follows the NCERT curriculum, enhanced with international teaching methodologies. We focus on STEM, Literacy, and Life Skills.</p>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="houses">
                        <div class="row p-4 g-3 text-center">
                            <div class="col-md-3"><div class="house-card bg-danger text-white">Agni (Red)</div></div>
                            <div class="col-md-3"><div class="house-card bg-primary text-white">Vaayu (Blue)</div></div>
                            <div class="col-md-3"><div class="house-card bg-success text-white">Prithvi (Green)</div></div>
                            <div class="col-md-3"><div class="house-card bg-warning text-dark">Jal (Yellow)</div></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>