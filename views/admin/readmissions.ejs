<%- layout("layouts/admin-layout") %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-4 border-bottom no-print">
    <div>
        <h2 class="h4 fw-bold mb-0 text-navy">Re-Admission Overview</h2>
        <p class="text-muted small mb-0">
            <i class="bi bi-people me-1"></i> Total Records: <strong id="totalCount"><%= readmissions.length %></strong>
        </p>
    </div>
    <div class="btn-toolbar">
        <button type="button" class="btn btn-sm btn-outline-secondary shadow-sm" onclick="window.print()">
            <i class="bi bi-printer me-1"></i> Print Page
        </button>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3 border-0 no-print">
        <div class="row align-items-center g-3">
            <div class="col-md-3">
                <div class="input-group input-group-sm">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-funnel"></i></span>
                    <select id="classFilter" class="form-select border-start-0 ps-0 fw-bold text-navy">
                        <option value="All">All Classes</option>
                        <option value="Nursery">Nursery</option>
                        <option value="LKG">LKG</option>
                        <option value="UKG">UKG</option>
                        <% for(let i = 1; i <= 12; i++) { %>
                            <option value="<%= i %>">Class <%= i %></option>
                        <% } %>
                    </select>
                </div>
            </div>

            <div class="col-md-5 ms-auto">
                <div class="input-group input-group-sm">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" id="tableSearch" class="form-control border-start-0 ps-0" placeholder="Search by name, ID, or Aadhaar...">
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-3">Student</th>
                    <th>Class</th>
                    <th>Re-Admission ID</th>
                    <th>Parent WhatsApp</th>
                    <th>Submitted</th>
                    <th class="text-end pe-3 no-print">Actions</th>
                </tr>
            </thead>
            <tbody id="readmissionTableBody">
                <% for (let reg of readmissions) { %>
                    <tr class="student-row">
                        <td class="ps-3">
                            <div class="d-flex align-items-center">
                                <img src="<%= (reg.studentPhoto && reg.studentPhoto.url)? reg.studentPhoto.url : '/img/default-avatar.png' %>"
                                     class="rounded-circle border me-2 shadow-sm"
                                     style="width: 42px; height: 42px; object-fit: cover;">
                                <div>
                                    <div class="fw-bold text-dark name-cell"><%= reg.studentName %></div>
                                    <div class="x-small text-muted"><%= reg.fatherName %> / <%= reg.motherName %></div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-light text-navy border class-badge">
                                <%= reg.className %>
                            </span>
                        </td>
                        <td class="fw-semibold text-muted small"><%= reg.readmissionId %></td>
                        <td>
                            <a href="https://wa.me/<%= reg.parentWhatsapp %>" target="_blank" class="text-decoration-none text-success">
                                <i class="bi bi-whatsapp me-1"></i><%= reg.parentWhatsapp %>
                            </a>
                        </td>
                        <td class="small text-muted">
                            <%= reg.createdAt ? new Date(reg.createdAt).toLocaleDateString('en-GB') : 'â€”' %>
                        </td>
                        <td class="text-end pe-3 no-print">
                            <div class="btn-group shadow-sm">
                                <a href="/admin/readmissions/<%= reg._id %>/view" class="btn btn-sm btn-outline-info" title="View"><i class="bi bi-eye-fill"></i></a>
                                <a href="/admin/readmissions/<%= reg._id %>/edit" class="btn btn-sm btn-outline-primary" title="Edit"><i class="bi bi-pencil-fill"></i></a>
                                <form action="/admin/readmissions/<%= reg._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this record?')"><i class="bi bi-trash-fill"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% } %>
                
                <tr id="noResultsRow" style="display: none;">
                    <td colspan="6" class="text-center py-5 text-muted">No matching records found.</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-white border-0 py-3 no-print">
        <div class="d-flex justify-content-between align-items-center">
            <div class="text-muted small">
                Showing <span id="showingCount">0</span> of <strong id="filterTotalCount"><%= readmissions.length %></strong> entries
            </div>
            <nav>
                <ul class="pagination pagination-sm mb-0" id="paginationControls">
                    </ul>
            </nav>
        </div>
    </div>
</div>

<style>
    .text-navy { color: #001f3f; }
    .x-small { font-size: 0.75rem; }
    .pagination .page-link { color: #001f3f; border: 1px solid #dee2e6; }
    .pagination .page-item.active .page-link { background-color: #001f3f; border-color: #001f3f; color: #fff; }
    @media print { .no-print { display: none !important; } }
</style>

<script>
    const searchInput = document.getElementById('tableSearch');
    const classFilter = document.getElementById('classFilter');
    const tableBody = document.getElementById('readmissionTableBody');
    const tableRows = Array.from(document.querySelectorAll('.student-row'));
    const paginationControls = document.getElementById('paginationControls');
    const showingCountLabel = document.getElementById('showingCount');
    const filterTotalLabel = document.getElementById('filterTotalCount');
    const noResultsRow = document.getElementById('noResultsRow');

    let filteredRows = [...tableRows];
    let currentPage = 1;
    const rowsPerPage = 10;

    function filterData() {
        const searchTerm = searchInput.value.toLowerCase();
        const selectedClass = classFilter.value.toLowerCase();

        filteredRows = tableRows.filter(row => {
            const rowText = row.innerText.toLowerCase();
            const classText = row.querySelector('.class-badge').innerText.toLowerCase();

            const matchesSearch = rowText.includes(searchTerm);
            const matchesClass = (selectedClass === "all") || (classText === selectedClass) || (classText.includes(selectedClass));

            return matchesSearch && matchesClass;
        });

        currentPage = 1; // Reset to first page on filter
        renderTable();
    }

    function renderTable() {
        const start = (currentPage - 1) * rowsPerPage;
        const end = start + rowsPerPage;

        // Hide all rows first
        tableRows.forEach(row => row.style.display = 'none');

        // Show only rows for current page
        const pageRows = filteredRows.slice(start, end);
        pageRows.forEach(row => row.style.display = '');

        // Update labels
        showingCountLabel.innerText = pageRows.length;
        filterTotalLabel.innerText = filteredRows.length;
        noResultsRow.style.display = (filteredRows.length === 0) ? '' : 'none';

        renderPagination();
    }

    function renderPagination() {
        const pageCount = Math.ceil(filteredRows.length / rowsPerPage);
        paginationControls.innerHTML = '';

        if (pageCount <= 1) return;

        for (let i = 1; i <= pageCount; i++) {
            const li = document.createElement('li');
            li.className = `page-item ${i === currentPage ? 'active' : ''}`;
            li.innerHTML = `<a class="page-link" href="javascript:void(0)">${i}</a>`;
            li.addEventListener('click', () => {
                currentPage = i;
                renderTable();
            });
            paginationControls.appendChild(li);
        }
    }

    searchInput.addEventListener('keyup', filterData);
    classFilter.addEventListener('change', filterData);

    // Initial Load
    filterData();
</script>