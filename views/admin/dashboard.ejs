<% layout("layouts/admin-layout") %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-4 border-bottom">
    <div>
        <h2 class="h4 fw-bold mb-0" style="color: #001f3f;">Admission Overview</h2>
        <div class="d-flex align-items-center mt-1">
            <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 small me-2">Live Portal</span>
            <p class="text-muted small mb-0">
                <i class="bi bi-clock-history me-1"></i> Last updated:
                <strong><%= new Date().toLocaleTimeString([], { hour: '2-digit' , minute: '2-digit' }) %></strong>
            </p>
        </div>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/export-excel" class="btn btn-sm btn-success me-2 shadow-sm">
            <i class="bi bi-file-earmark-excel me-1"></i> Excel
        </a>
        <button type="button" class="btn btn-sm btn-outline-secondary shadow-sm" onclick="window.print()">
            <i class="bi bi-printer me-1"></i> Print Page
        </button>
    </div>
</div>

<div class="row mb-4 g-3">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center p-3 h-100" style="border-left: 5px solid #001f3f !important;">
            <small class="text-muted fw-bold">TOTAL APPLICATIONS</small>
            <h3 class="fw-bold mb-0 mt-2"><%= registrations.length %></h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center p-3 h-100" style="border-left: 5px solid #ffc107 !important;">
            <small class="text-muted fw-bold">PENDING</small>
            <h3 class="fw-bold mb-0 mt-2 text-warning"><%= registrations.filter(r=> r.status === 'Pending').length %></h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center p-3 h-100" style="border-left: 5px solid #28a745 !important;">
            <small class="text-muted fw-bold">APPROVED</small>
            <h3 class="fw-bold mb-0 mt-2 text-success"><%= registrations.filter(r=> r.status === 'Approved').length %></h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center p-3 h-100" style="border-left: 5px solid #dc3545 !important;">
            <small class="text-muted fw-bold">FEE OVERDUE</small>
            <h3 class="fw-bold mb-0 mt-2 text-danger"><%= registrations.filter(r=> r.overdueAmount > 0).length %></h3>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3 border-0">
        <div class="row align-items-center g-3">
            <div class="col-md-5">
                <div class="input-group input-group-sm">
                    <label class="input-group-text bg-white border-end-0"><i class="bi bi-funnel text-primary"></i></label>
                    <select id="gradeFilter" class="form-select border-start-0 ps-0 fw-semibold">
                        <option value="All">All Grades (KG - 12th)</option>
                        <option value="Nursery">Nursery</option><option value="KG">KG</option>
                        <option value="Class I">Class I</option><option value="Class X">Class X</option>
                        <option value="XI">Class XI</option><option value="XII">Class XII</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4 ms-auto">
                <div class="input-group input-group-sm">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" id="tableSearch" class="form-control border-start-0 ps-0" placeholder="Quick find student...">
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-3">Student Particulars</th>
                    <th>Grade</th>
                    <th>Status</th>
                    <th>Financials</th>
                    <th class="text-end pe-3">Actions</th>
                </tr>
            </thead>
            <tbody id="admissionTableBody">
                <% for(let reg of registrations) { %>
                    <tr>
                        <td class="ps-3">
                            <div class="d-flex align-items-center">
                                <img src="<%= reg.studentPhoto.url || '/img/default-avatar.png' %>" 
                                     class="rounded-circle border me-2 shadow-sm" 
                                     style="width: 42px; height: 42px; object-fit: cover;">
                                <div>
                                    <div class="fw-bold text-dark"><%= reg.firstName %> <%= reg.lastName %></div>
                                    <div class="x-small text-muted">ID: #<%= reg._id.toString().slice(-6).toUpperCase() %></div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-light text-navy border"><%= reg.requiredClass %></span>
                            <% if(reg.stream && reg.stream !== 'None') { %>
                                <div class="x-small fw-bold text-orange"><%= reg.stream %></div>
                            <% } %>
                        </td>
                        <td>
                            <span class="badge rounded-pill <%= reg.status === 'Approved' ? 'bg-success' : (reg.status === 'Rejected' ? 'bg-danger' : 'bg-warning text-dark') %>">
                                <%= reg.status %>
                            </span>
                        </td>
                        <td>
                            <% if(reg.overdueAmount > 0) { %>
                                <div class="text-danger fw-bold small">Overdue: ₹<%= reg.overdueAmount %></div>
                            <% } else if (reg.fees.totalAnnualFee > reg.fees.amountPaid) { %>
                                <div class="text-warning fw-bold small">Due: ₹<%= reg.fees.totalAnnualFee - reg.fees.amountPaid %></div>
                            <% } else { %>
                                <div class="text-success fw-bold small"><i class="bi bi-check-circle-fill"></i> Fully Paid</div>
                            <% } %>
                        </td>
                        <td class="text-end pe-3">
                            <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                <a href="/admin/admissions/<%= reg._id %>/view" class="btn btn-sm btn-outline-info" title="View Full Application">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a href="/admin/edit/<%= reg._id %>" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                <form action="/admin/delete/<%= reg._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete record permanently?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<style>
    .text-navy { color: #001f3f; }
    .text-orange { color: #f37021; }
    .x-small { font-size: 0.75rem; }
</style>

<script>
    const searchInput = document.getElementById('tableSearch');
    const gradeFilter = document.getElementById('gradeFilter');
    const tableRows = document.querySelectorAll('#admissionTableBody tr');

    // Filtering Logic
    function filterTable() {
        const searchTerm = searchInput.value.toLowerCase();
        const selectedGrade = gradeFilter.value.toLowerCase();
        tableRows.forEach(row => {
            const rowText = row.innerText.toLowerCase();
            const matchesSearch = rowText.includes(searchTerm);
            const matchesGrade = selectedGrade === "all" || row.innerText.includes(gradeFilter.value);
            row.style.display = (matchesSearch && matchesGrade) ? '' : 'none';
        });
    }
    searchInput.addEventListener('keyup', filterTable);
    gradeFilter.addEventListener('change', filterTable);
</script>
