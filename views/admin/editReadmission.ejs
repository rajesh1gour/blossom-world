<% layout("layouts/admin-layout") %>

<div class="d-flex justify-content-between align-items-center pb-2 mb-4 border-bottom">
    <div>
        <h2 class="h5 fw-bold mb-0" style="color:#001f3f;">Edit Re-Admission</h2>
        <div class="text-muted small">Application ID: <strong><%= student.readmissionId %></strong></div>
    </div>
    <div class="d-flex gap-2">
        <a href="/admin/readmissions/<%= student._id %>/view" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
        <button form="editReadmissionForm" class="btn btn-sm btn-primary">
            <i class="bi bi-save me-1"></i> Save
        </button>
    </div>
</div>

<form id="editReadmissionForm" action="/admin/readmissions/<%= student._id %>?_method=PUT" method="POST">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Current Class</label>
                    <input type="text" name="data[className]" class="form-control" value="<%= student.className || '' %>" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Admission Date</label>
                    <input type="date" name="data[admissionDate]" class="form-control" value="<%= student.admissionDate ? new Date(student.admissionDate).toISOString().slice(0,10) : '' %>" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Class To Be Admitted</label>
                    <input type="text" name="data[classToBeAdmitted]" class="form-control" value="<%= student.classToBeAdmitted || '' %>" required>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">Student Name</label>
                    <input type="text" name="data[studentName]" class="form-control" value="<%= student.studentName || '' %>" required>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold">Prev. Marks %</label>
                    <input type="text" name="data[previousMarksPercentage]" class="form-control" value="<%= student.previousMarksPercentage || '' %>" required>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold">Prev. Attendance %</label>
                    <input type="text" name="data[previousAttendancePercentage]" class="form-control" value="<%= student.previousAttendancePercentage || '' %>" required>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">Father Name</label>
                    <input type="text" name="data[fatherName]" class="form-control" value="<%= student.fatherName || '' %>" required>
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Mother Name</label>
                    <input type="text" name="data[motherName]" class="form-control" value="<%= student.motherName || '' %>" required>
                </div>

                <div class="col-md-4">
                    <label class="form-label small fw-bold">Parent WhatsApp</label>
                    <input type="text" name="data[parentWhatsapp]" class="form-control" value="<%= student.parentWhatsapp || '' %>" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Student Aadhaar</label>
                    <input type="text" name="data[studentAadhaar]" class="form-control" value="<%= student.studentAadhaar || '' %>" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Parent Aadhaar</label>
                    <input type="text" name="data[parentAadhaar]" class="form-control" value="<%= student.parentAadhaar || '' %>" required>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">Height</label>
                    <input type="text" name="data[height]" class="form-control" value="<%= student.height || '' %>">
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Weight</label>
                    <input type="text" name="data[weight]" class="form-control" value="<%= student.weight || '' %>">
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">PAN</label>
                    <input type="text" name="data[panNo]" class="form-control" value="<%= student.panNo || '' %>">
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Parent Qualification</label>
                    <input type="text" name="data[parentQualification]" class="form-control" value="<%= student.parentQualification || '' %>">
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Distance From School</label>
                    <input type="text" name="data[distanceFromSchool]" class="form-control" value="<%= student.distanceFromSchool || '' %>">
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Admission No</label>
                    <input type="text" name="data[admissionNo]" class="form-control" value="<%= student.admissionNo || '' %>">
                </div>

                <div class="col-12">
                    <label class="form-label small fw-bold">Permanent Address</label>
                    <textarea name="data[permanentAddress]" class="form-control" rows="3" required><%= student.permanentAddress || '' %></textarea>
                </div>
            </div>

            <div class="mt-4 text-muted small">
                Photos/signature are not edited here (only details).
            </div>
        </div>
    </div>
</form>

